@model PhotoSharingApp.Model.Photo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Display</title>
</head>
<body>
    <div>
        <h4>Photo</h4>
        <hr />
        <dl class="display-field">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Title)
                @if (Model.PhotoFile != null)
                {
                    <img width="800" src="@Url.Action("GetImage", "Photo",  
   new { id=Model.PhotoID }) " />
                }
                
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.ImageMimeType)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.ImageMimeType)
            </dd>
    
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.PhotoID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
