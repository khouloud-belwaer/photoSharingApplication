@model PhotoSharingApp.Models.Photo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   <title> Photo: @Model.Title </title>
    <link type="text/css" rel="stylesheet" href="~/content/Style.css" />
</head>
<body>
   
        <h4>Photo</h4>
        <hr />
    <div id="slide1" class="slide">
        <h2>"@Model.Title"</h2>
        @if (Model.PhotoFile != null)
            {
            <img width="800" src="@Url.Action("GetImage", "Photo",
   new { id=Model.PhotoID }) " />
            <p>
                @Html.DisplayFor(
model =>
      model.Description)
            </p>
                <p>
                    @Html.DisplayNameFor(model => model.UserName):
                    @Html.DisplayFor(model => model.UserName)
                </p>
                <p>
                    @Html.DisplayNameFor(
      model => model.CreatedDate):
                    @Html.DisplayFor(
      model => model.CreatedDate)
                </p>
        }


    </div>

    
    
    <footer> 
   @Html.Action("_CommentsForPhoto", "Commentaire", new { PhotoId = Model.PhotoID })
</footer> 
       
</body>
</html>
